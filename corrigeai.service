[Unit]
Description=CorrigeAI Docker Compose Application
Requires=docker.service
After=docker.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/auronex-server-2/corrigeai
ExecStart=/usr/bin/docker-compose up -d
ExecStop=/usr/bin/docker-compose down
TimeoutStartSec=0
User=auronex-server-2
Group=auronex-server-2

[Install]
WantedBy=multi-user.target
